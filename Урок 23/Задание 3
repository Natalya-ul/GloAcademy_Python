import pygame
import random
import time

class Ball:
    def __init__(self, display):
        self.display = display
        self.color = pygame.Color('red')
        self.center_x = 100
        self.center_y = 100
        self.radius = 30

        self.vx = 2
        self.vy = 2

    def show(self):
        pygame.draw.circle(self.display, self.color, (self.center_x, self.center_y), self.radius)

    def clear(self):
        pygame.draw.circle(self.display, pygame.Color('white'), (self.center_x, self.center_y), self.radius)

    def go(self):
        self.center_x += self.vx
        self.center_y += self.vy

    def move(self):
        self.clear()
        self.go()
        self.show()

    def stop(self):
        self.vx = 0
        self.vy = 0


class RandomPointBall(Ball):
    def __init__(self, display):
        super().__init__(display)
        
        self.color = pygame.Color('green')

        width, hight = display.get_size()
        self.center_x = random.randint(self.radius, width - self.radius)
        self.center_y = random.randint(self.radius, hight - self.radius)

class PointBall(Ball):
    def __init__(self, display, x, y):
        super().__init__(display)
        
        self.color = pygame.Color('yellow')
        
        self.center_x = x
        self.center_y = y

class RandomPointMovableBall(RandomPointBall):
    def __init__(self, display):
        super().__init__(display)

        self.vx = random.randrange(-3, 3)
        while self.vx == 0:
            self.vx = random.randrange(-3, 3)
            
        self.vy = random.randrange(-3, 3)


def if_in_form(ball):
    if (width - ball.radius) > ball.center_x > ball.radius and (hight - ball.radius) > ball.center_y > ball.radius:
        return True
    
def show_count(counter):
    text = font.render(f'Вы поймали {counter} мячей', True,
                      pygame.Color('red'), pygame.Color('white'))
    display.blit(text, (10, 50))

def clear_count():
    text = font.render(f'Вы поймали           мячей', True,
                      pygame.Color('white'), pygame.Color('white'))
    display.blit(text, (10, 50))

def if_ball_catch(ball, pos_x, pos_y):
    if ball.center_x - ball.radius <= pos_x <= ball.center_x + ball.radius and ball.center_y - ball.radius <= pos_y <= ball.center_y + ball.radius:
        return True
  
pygame.init()

font = pygame.font.SysFont('arial', 25)

width = 700
hight = 300
display = pygame.display.set_mode((width, hight))
display.fill(pygame.Color('white'))


balls = []
for i in range(10):
    ball = RandomPointMovableBall(display)
    ball.show()
    balls.append(ball)
    
pygame.display.flip()

time.sleep(2)

clock = pygame.time.Clock()
counter = 0

while True:
    event_list = pygame.event.get()
    for event in event_list:
        if event.type == pygame.QUIT:
            pygame.quit()

        if event.type == pygame.MOUSEBUTTONDOWN and event.button == 1:
            pos = event.pos
            for ball in balls:
                if if_ball_catch(ball, pos[0], pos[1]):
                    ball.stop()
                    if if_in_form(ball):
                        clear_count()
                        counter += 1
                        show_count(counter)
                    
    for ball in balls:
        ball.move()

    pygame.display.flip()
    clock.tick(40)
