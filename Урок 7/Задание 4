print('Введите первое целое число:')
number1 = int(input())
print('Введите второе целое число:')
number2 = int(input())
print('Четные числа на промежутке от', number1, 'до', number2, 'в возрастающем порядке:')
if number2 > number1:
    for i in range(number1, number2 + 1):
        if i % 2 == 0:
            print(i)
else:
    for i in range(number2, number1 + 1):
        if i % 2 == 0:
            print(i)            
