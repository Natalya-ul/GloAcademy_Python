def cost_products(num_products):
    cost = 0
    for i in range(1, num_products + 1):
        if i == 1:
            cost += 100
        else:
            cost += 50
    return(cost)

print('Введите кол-во товаров в заказе: ')
number = int(input())
print(f'Стоимость доставки: {cost_products(number)}')
