print('Введите натуральное числo:')
number_input = int(input())
number = number_input
total = 0
while number > 9:
    total = 0
    while number != 0:
        digital = number % 10
        total += digital
        number = number // 10
    number = total
print('Цифровой корень числа', number_input, 'равен', number)
